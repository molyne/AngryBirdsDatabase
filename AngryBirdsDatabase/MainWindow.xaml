<Window x:Class="AngryBirdsDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AngryBirdsDatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="536.667" Width="761.666">
    <Grid Margin="0,0,-81.333,-90.333">
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Height="23" Margin="34,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="ScoreListBox" HorizontalAlignment="Left" Height="181" Margin="34,280,0,0" VerticalAlignment="Top" Width="250"/>
        <Label x:Name="InfoLabel" HorizontalAlignment="Left" Margin="182,46,0,0" VerticalAlignment="Top" Width="102">
            <Button x:Name="ViewScoreButton" Content="View Score" Width="75" Click="ViewScoreButton_Click"/>
        </Label>
        <TextBox x:Name="LevelTextBox" HorizontalAlignment="Left" Height="23" Margin="34,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ScoreTextBox" HorizontalAlignment="Left" Height="23" Margin="34,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AddLevelBirdsTextBox" HorizontalAlignment="Left" Height="23" Margin="582,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="AddLevelBirdsTextBox_TextChanged"/>
        <Button x:Name="AddLevelButton" Content="Add next level" HorizontalAlignment="Left" Margin="582,137,0,0" VerticalAlignment="Top" Width="123" Height="24" Click="AddLevelButton_Click" IsEnabled="False"/>
        <Button x:Name="AddUserButton" Content="Update" HorizontalAlignment="Left" Margin="88,190,0,0" VerticalAlignment="Top" Width="42" Click="AddUserButton_Click"/>
        <Label x:Name="AddUserLabel" Content="Username:" HorizontalAlignment="Left" Margin="34,23,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="AddLevelLabel" Content="Level:" HorizontalAlignment="Left" Margin="34,78,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="AddScoreLAbel" Content="Score:" HorizontalAlignment="Left" Margin="34,127,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ListBox x:Name="PlayerListBox" HorizontalAlignment="Left" Height="181" Margin="308,280,0,0" VerticalAlignment="Top" Width="175"/>
        <ListBox x:Name="LevelListbox" HorizontalAlignment="Left" Height="181" Margin="521,280,0,0" VerticalAlignment="Top" Width="197"/>
        <Label x:Name="ScoresListBocLabel" Content="Scores table:" HorizontalAlignment="Left" Margin="34,254,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="PlayerListBoxLabel" Content="Players table:" HorizontalAlignment="Left" Margin="308,254,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="LevelListboxLabel" Content="Levels table:" HorizontalAlignment="Left" Margin="521,254,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="AddBirdsLabel" Content="Add birds to level:" HorizontalAlignment="Left" Margin="582,78,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="ViewScoreLabel" Content="" HorizontalAlignment="Left" Margin="171,81,0,0" VerticalAlignment="Top" Width="216"/>
        <ListBox x:Name="ViewScoreOnePlayerListbox" HorizontalAlignment="Left" Height="127" Margin="263,78,0,0" VerticalAlignment="Top" Width="288"/>
        <Label x:Name="ChoosenPlayerScoreLevel" Content="Selected player score:" HorizontalAlignment="Left" Margin="308,46,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="AddNewScoreButton" Content="Add" HorizontalAlignment="Left" Margin="34,190,0,0" VerticalAlignment="Top" Width="47" Click="AddNewScoreButton_Click"/>

    </Grid>
</Window>
